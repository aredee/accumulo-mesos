#!/bin/bash

export ACCUMULO_HOME=/vagrant/accumulo-mesos-dist/target/tarball/accumulo-1.7.0
export ACCUMULO_CLIENT_CONF_PATH=$ACCUMULO_HOME/conf/accumulo-site.xml
export HADOOP_PREFIX=/usr/local/hadoop
export HADOOP_CONF_DIR=$HADOOP_PREFIX/etc/hadoop
#export ZOOKEEPER_HOME=/etc/zookeeper
# Where is the zookeeper jar?
export ZOOKEEPER_HOME=/usr/share/java

rm -f $ACCUMULO_HOME/logs/*
DATE=`date "+%Y%m%d_%H%M%S"`
LOG="mylog_"$DATE.txt
rm -f $LOG


java -jar /vagrant/accumulo-mesos-dist/target/tarball/accumulo-mesos-framework-0.1.0-SNAPSHOT-jar-with-dependencies.jar \
    -j conf/TestCluster-2.json \
    | tee $LOG

