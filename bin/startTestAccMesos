#!/bin/bash

export ACCUMULO_HOME=/vagrant/accumulo-mesos-dist/target/accumulo-mesos-dist-0.1.0-SNAPSHOT/accumulo-1.7.0
export ACCUMULO_CLIENT_CONF_PATH=$ACCUMULO_HOME/conf/accumulo-site.xml
export HADOOP_PREFIX=/usr/local/hadoop
export HADOOP_CONF_DIR=$HADOOP_PREFIX/etc/hadoop
export ZOOKEEPER_HOME=/etc/zookeeper


DATE=`date "+%Y%m%d_%H%M%S"` ; java -jar /vagrant/accumulo-mesos-dist/target/accumulo-mesos-dist-0.1.0-SNAPSHOT/accumulo-mesos-framework-0.1.0-SNAPSHOT-jar-with-dependencies.jar \
    -b 127.0.0.1 \
    -z 127.0.0.1:2181 \
    -P 8192 \
    -m 10.0.2.15:5050 \
    -f "accumulo-mesos-dev-test-$DATE" \
    -t "/vagrant/accumulo-mesos-dist/target/accumulo-mesos-dist-0.1.0-SNAPSHOT.tar.gz"
    | tee mylog.txt

